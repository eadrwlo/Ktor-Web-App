{{<base}}
    {{$header}}
        {{<header}}
            {{$title}}Notes{{/title}}
        {{/header}}
    {{/header}}
    {{$content}}
        <h1>Hello - {{ notes.userName }}</h1>
        <div id="additem">
            <h4>Add new task:</h4>
          <form method="post" class="form-inline" id="additemform"  action="/additem">
            <label for="title">Title:</label>
            <input type="text" class="form-control" id="title" placeholder="Enter title" name="title">
           <input type="hidden" name="assignedTo" value={{ notes.userName }} />
           <label for="importance">Importance:</label>
          <select name="importance" form="additemform">
           <option value="LOW">LOW</option>
            <option value="MEDIUM">MEDIUM</option>
             <option value="HIGH">HIGH</option>
           </select><br>
           <label for="details">Details:</label>
            <textarea name="details" placeholder="Enter details"  id="details" form="additemform"></textarea>
            <button type="submit" class="btn btn-secondary">Add item</button>
          </form>
        </div>
        <ul>
            {{#notes.noteItems}}
            <li>
            <div id="note">
                 <div id="note-item">{{title}}<div>
                 <div id="note-item">{{details}}<div>
                 <div id="note-item">{{importance}}<div>
                 <form method="post" id="deleteitemform"  action="/deleteitem">
                    <input type="hidden" name="id" value={{ id }} />
                     <button id="delete" type="submit">Delete</button>
                   </form>
            </div>
             </li>
            {{/notes.noteItems}}
        </ul>
    {{/content}}
{{/base}}
